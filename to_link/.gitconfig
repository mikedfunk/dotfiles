[alias]
    ahead = git log --branches --not --remotes
    # delete every branch that has been merged into develop except develop
    bclean = "!f() { git branch --merged ${1-develop} | grep -v " ${1-develop}$" | xargs -r git branch -d; }; f"
    ci = commit
    cm = !git add -A && git commit -am
    br = branch
    co = checkout
    cob = checkout -b
    df = diff
    dc = diff --cached
    dt = difftool
    ign = ls-files -o -i --exclude-standard
    iw = instaweb --httpd webrick
    latest = for-each-ref --sort=-committerdate refs/heads --format='%(committerdate:relative) %(refname:short)'
    lg = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    olg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    purr = pull --rebase
    pu = push
    pl = pull
    pp = !git pull && git push
    pup = !git pull --recurse-submodules && git submodule update
    permission-reset = !git diff -p -R | grep -E \"^(diff|(old|new) mode)\" | git apply
    ready = rebase -i @{u}
    rh = reset --hard
    st = status -sb
    standup = log --pretty=format:'%Cred%h%Creset -%Creset %s %Cgreen(%cD) %C(bold blue)<%an>%Creset' --since yesterday --author mike.funk@internetbrands.com
    sync = "!f() { echo 'Syncing current branch with develop' && git checkout develop && git pull && git checkout - && git rebase develop; }; f"
    undo = reset HEAD~1 --mixed
    unstage = reset HEAD
    wiff = diff --color-words
    wip = !git add -u && git commit -m "WIP"
    wipe = !git add -A && git commit -qm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
[color]
    branch = true
    diff = true
    status = true
    showbranch = true
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
    ui = true
[core]
    editor = vim
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
    trustctime = false
    excludesfile = ~/.gitignore
    ; autocrlf = input
    ; autocrlf = true
    autocrlf = false
    ignorecase = false
    preloadindex = true
    pager = less -FRSX
[apply]
    whitespace = nowarn
[branch]
    autosetuprebase = always
[diff]
    ; tool = opendiff
    tool = vimdiff
[format]
    ; sets the git log format to be one line
    ; pretty = '%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
[github]
    user = mikedfunk
[http]
    sslVerify = false
[help]
    autocorrect = 1
[log]
    date = short
[merge]
    ; tool = opendiff
    tool = vimdiff
[mergetool]
    keepBackup = false
[pre-commit]
    checks = php, tabs, white_space, console_log, merge_conflict, json, yaml, coffeelint
[push]
    default = current
[rebase]
    autosquash = true
[rerere]
    enabled = 1
[user]
    email = mike@mikefunk.com
    name = Mike Funk
[url "git@github.com"]
    insteadOf = gh
[url "git@bitbucket.org"]
    insteadOf = bb
[web]
    browser = open
[instaweb]
    httpd = webrick
