  <!-- TODO implement https://github.com/object-calisthenics/phpcs-calisthenics-rules/tree/v2.0.1 . Kind of hard to do as the docs for 2.0.1 don't have examples and it's the newest version that supports php 7.0 :( -->

  <!-- begin humanmade standards -->
  <!-- might remove... these are mostly based on wordpress and not easy to include -->
  <!-- <rule ref="./vendor/humanmade/coding-standards/HM/Sniffs/Functions/NamespacedFunctionsSniff.php" /> -->
  <!-- <rule ref="./vendor/humanmade/coding-standards/HM/Sniffs/Namespaces/NoLeadingSlashOnUseSniff.php" /> -->
