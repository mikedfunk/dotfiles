[user]
	name = Mike Funk
	email = mfunk@christianpublishing.com
[push]
	default = current
[merge]
	tool = opendiff
[diff]
	tool = opendiff
[core]
	editor = /usr/bin/vim
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
[pre-commit]
	checks = php, merge_conflict, console_log, debugger
[color]
	ui = true
  [color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
  [color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
  [color "status"]
    added = yellow
    changed = green
    untracked = cyan
    ui = true
  [core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	trustctime = false
	excludesfile = /Users/mikedfunk/.gitignore
[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    dc = diff --cached
    lg = log -p
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    ls = ls-files
    ign = ls-files -o -i --exclude-standard
[mergetool]
	keepBackup = false
